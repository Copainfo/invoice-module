{
    "name": "codingpair-qtn/invoice-module",
    "description": "Module qui permet de généré des factures",
    "autoload": {
        "psr-4": {
            "CodingpairQtn\\InvoiceModule\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Quentin Schneider",
            "email": "quentin.08210@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "spipu/html2pdf": "^5.2",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "check": [
            "phpcs",
            "phpstan"
        ],
        "fix": [
            "phpcbf"
        ],
        "test": [
            "Composer\\Config::disableProcessTimeout",
            "phpunit"
        ],
        "test:coverage": [
            "Composer\\Config::disableProcessTimeout",
            "phpunit --coverage-html ./test/coverage",
            "php -S 0.0.0.0:9999 -t ./test/coverage"
        ]
    },
    "config": {
        "allow-plugins": {
            "phpro/grumphp": true
        }
    },
    "require-dev": {
        "phpro/grumphp": "^1.16",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.1",
        "fakerphp/faker": "^1.22"
    }
}
